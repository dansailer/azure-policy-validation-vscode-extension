{
  "name": "azurepolicyvalidator",
  "displayName": "AzurePolicyValidator",
  "description": "Validates a Azure Policy json by creating and deleting the policy using Azure CLI",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.customMenu",
        "title": "Validate Azure Policy"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "extension.customMenu",
          "when": "resourceLangId == json",
          "group": "azurePolicy"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.customMenu",
          "when": "resourceLangId == json && resourceExtname == .json",
          "group": "azurePolicy"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
  }
}
